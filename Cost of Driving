#include <iostream>

using namespace std;

int main()
{
    double distance;
    double milesPerGallon;
    double pricePerGallon;
    double total;

    cout << "** COST OF DRIVING CALCULATOR **\n" << endl;

    cout << "Driving distance: ";
    cin >> distance;

    cout << "Miles per gallon: ";
    cin >> milesPerGallon;

    cout << "Price per gallon: ";
    cin >> pricePerGallon;

    //ALGORITHM
    total = (distance / milesPerGallon) * pricePerGallon;

    cout << "Cost of your driving trip: $" << + total;

    return 0;
}
